# KoboToolbox Environment Configuration
# Copy this file to .env and update the values

# Domain Configuration
KOBO_DOMAIN=yourdomain.com
KOBO_SUBDOMAIN=kf
KOBOCAT_SUBDOMAIN=kc
ENKETO_SUBDOMAIN=ee

# Security - CHANGE THESE IN PRODUCTION!
POSTGRES_PASSWORD=your_secure_postgres_password
MONGO_ROOT_PASSWORD=your_secure_mongo_password
REDIS_PASSWORD=your_secure_redis_password
DJANGO_SECRET_KEY=your_long_random_secret_key_here
ENKETO_API_TOKEN=your_enketo_api_token

# Email Configuration (optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
